{
  "name": "portfolio-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "next dev",
    "dev:backend": "cd .. && cd backend && yarn develop",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "_lint": "eslint --config ./.eslintrc.json --ext js --ext jsx --ext tsx --ext ts",
    "lint:fix": "npm run _lint -- --fix ./",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,scss,md,json}' --config ./.prettierrc",
    "prepare": "cd .. && husky install frontend/.husky"
  },
  "dependencies": {
    "@emotion/react": "^11.10.8",
    "@emotion/server": "^11.10.0",
    "@mantine/core": "^6.0.10",
    "@mantine/form": "^6.0.19",
    "@mantine/hooks": "^6.0.10",
    "@mantine/modals": "^6.0.11",
    "@mantine/next": "^6.0.10",
    "@mantine/notifications": "^6.0.19",
    "@tabler/icons-react": "^2.20.0",
    "@types/node": "18.16.3",
    "@types/nodemailer": "^6.4.9",
    "@types/react": "18.2.5",
    "@types/react-dom": "18.2.3",
    "dayjs": "^1.11.7",
    "eslint-config-next": "^13.4.1",
    "next": "^13.4.19",
    "nodemailer": "^6.9.4",
    "path": "^0.12.7",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.32.4",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@svgr/webpack": "^7.0.0",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "eslint": "^8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
